{
  "manifest_version": 2,

  "name": "Roll20 Colourise",
  "description": "This extension colours the text chat in Roll20.",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["*://app.roll20.net/"],
      "js": ["jquery-2.1.3.min.js", "jquery.initialize.js", "roll20-colourise.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "*://app.roll20.net/"
  ]
}
